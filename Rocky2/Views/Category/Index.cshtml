@model IEnumerable<Rocky2.Models.Category>

<div class="container pt-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Category List</h2>
        </div>
        <div class="col-6 text-primary text-right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-outline-info">
                Add New Category
            </a>
        </div>
    </div>
    <br /><br />

    @if(Model.Count() > 0) { 

        <table class="table table-striped table-bordered" style="width : 100%">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Order 
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td width="50%">@category.CategoryName</td>
                        <td width="30%">@category.DisplayOrder</td>
                        <td class="text-center">
                            <div class="w-100 text-center btn-group" role="group">
                                <a asp-controller="Category" asp-route-Id="@category.Id" asp-action="Edit" class="btn btn-info">
                                   Edit
                                </a>
                                <a asp-controller="Category" asp-route-Id="@category.Id" asp-action="Delete" class="btn btn-danger">
                                    Delete
                                </a>
                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>


    } else
            {
                <p>There are No Categories</p>
            }

</div>

